<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox id="add-card" alignment="CENTER" maxHeight="450.0" maxWidth="390.0" prefHeight="450.0" prefWidth="390.0" spacing="60.0" styleClass="card" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.presentation.controllers.AddGroupChatController">
   <children>
      <HBox id="title" alignment="CENTER" spacing="10.0">
         <children>
            <Region prefHeight="25.0" prefWidth="60.0" styleClass="add-icon" />
            <VBox alignment="CENTER">
               <children>
                  <Label id="add-group=label" styleClass="add-label" text="Add Group chat">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </HBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" styleClass="input-field-holder">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Circle fx:id="groupPictureCircle" fill="DODGERBLUE" radius="43.0" stroke="TRANSPARENT" strokeType="INSIDE">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Circle>
            <Hyperlink onAction="#onUploadPictureHyperLinkAction" text="Upload picture">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Hyperlink>
            <TextField fx:id="groupNameTextField" promptText="Enter the group name" styleClass="input-field">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <HBox id="adding-box" alignment="TOP_RIGHT" spacing="10.0" styleClass="adding-box">
         <children>
            <Hyperlink onAction="#onCancelHyperLinkAction" text="Cancel">
               <HBox.margin>
                  <Insets top="7.0" />
               </HBox.margin>
            </Hyperlink>
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#onCreateButtonAction" styleClass="create-button" text="Create" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../styles/Base.css" />
      <URL value="@AddGroupChatStyles.css" />
   </stylesheets>
</VBox>
