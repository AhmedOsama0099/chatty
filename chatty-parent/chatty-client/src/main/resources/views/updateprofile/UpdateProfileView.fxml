<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane id="update-profile-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.presentation.controllers.UpdateProfileController">
   <top>
      <HBox id="update-profile-header" styleClass="profile-header" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="35.0" prefWidth="55.0" styleClass="update-profile-icon">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Region>
            <Label styleClass="update-profile-label" text="Update Profile" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <StackPane id="update-profile-body" BorderPane.alignment="CENTER">
         <children>
            <VBox id="register-card" alignment="CENTER" spacing="12.0" styleClass="profile-vbox">
               <children>
                  <Circle fx:id="profilePictureCircle" fill="#476072" radius="43.0" stroke="TRANSPARENT" strokeType="INSIDE" />
                  <Hyperlink fx:id="uploadPictureHyperLink" onAction="#onUploadPictureHyperLinkAction" text="Upload picture" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <TextField fx:id="nameTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Display name" styleClass="input-field" text="Salma Fayez Himida" HBox.hgrow="ALWAYS">
                           <stylesheets>
                              <URL value="@UpdateProfileStyles.css" />
                              <URL value="@../../styles/Base.css" />
                           </stylesheets>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                        <TextField fx:id="emailTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Email" styleClass="input-field" text="salma.fayez.himida@gmail.com" HBox.hgrow="ALWAYS">
                           <stylesheets>
                              <URL value="@UpdateProfileStyles.css" />
                              <URL value="@../../styles/Base.css" />
                           </stylesheets>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <ChoiceBox fx:id="countryChoiceBox" maxWidth="-Infinity" prefWidth="200.0" styleClass="input-field" HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets top="5.0" />
                           </padding></ChoiceBox>
                        <ChoiceBox fx:id="genderChoiceBox" maxWidth="-Infinity" prefWidth="200.0" styleClass="input-field" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <TextField fx:id="bioTextField" maxWidth="-Infinity" prefWidth="420.0" styleClass="input-field" text="It is never too late" HBox.hgrow="ALWAYS">
                           <stylesheets>
                              <URL value="@UpdateProfileStyles.css" />
                              <URL value="@../../styles/Base.css" />
                           </stylesheets>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <DatePicker fx:id="birthDateDatePicker" maxWidth="-Infinity" prefWidth="420.0" styleClass="input-field" />
                     </children>
                  </HBox>
                  <Button id="finish-button" fx:id="updateButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#onUpdateButtonAction" styleClass="next-button" text="Update">
                     <padding>
                        <Insets bottom="7.0" left="20.0" right="20.0" top="7.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
   <stylesheets>
      <URL value="@../../styles/Base.css" />
      <URL value="@UpdateProfileStyles.css" />
   </stylesheets>
</BorderPane>
