<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="shadow-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox id="add-card" alignment="CENTER" maxHeight="450.0" maxWidth="390.0" prefHeight="450.0" prefWidth="390.0" spacing="15.0" styleClass="card">
         <children>
            <HBox id="title" alignment="CENTER" spacing="10.0">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Label id="add-label" styleClass="header-label" text="Try to connect...">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
            <VBox id="text-field-holder" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" styleClass="gif-holder" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/loading.gif" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <stylesheets>
      <URL value="@../../styles/Base.css" />
      <URL value="@TryConnectSplashStyles.css" />
   </stylesheets>
</BorderPane>
