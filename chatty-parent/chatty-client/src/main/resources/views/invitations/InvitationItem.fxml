<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root id="invitation details" styleClass="light-back-ground" type="VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="freind-details" alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="15.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <HBox spacing="15.0" styleClass="user-field">
               <children>
                  <HBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                     <children>
                        <Label id="name" fx:id="friendNameLabel" styleClass="invitation-bold-text-field" text="HafsaMohamed6678" />
                        <Label styleClass="invitation-bold-text-field" text="#" />
                        <Label id="phone-number" fx:id="friendPhoneNumberLabel" maxWidth="1.7976931348623157E308" styleClass="invitation-text-field" text="010101010101" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <Button id="accept" fx:id="acceptButton" maxWidth="80.0" mnemonicParsing="false" prefWidth="80.0" styleClass="invitation-button" text="Accept" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button id="refuse" fx:id="refuseButton" maxWidth="80.0" mnemonicParsing="false" prefWidth="80.0" styleClass="invitation-button" text="Refuse" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
