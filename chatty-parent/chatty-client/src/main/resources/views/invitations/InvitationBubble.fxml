<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<fx:root id="freind-details" alignment="CENTER" spacing="15.0" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.presentation.customcontrols.InvitationBubble">
   <children>
      <HBox spacing="15.0" styleClass="user-field">
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
               <children>
                  <Label id="name" fx:id="friendNameLabel" styleClass="invitation-bold-text-field" text="HafsaMohamed6678" />
                  <Label styleClass="invitation-bold-text-field" text="#" />
                  <Label id="phone-number" fx:id="friendPhoneNumberLabel" maxWidth="1.7976931348623157E308" styleClass="invitation-text-field" text="010101010101" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <Button id="accept" maxWidth="80.0" mnemonicParsing="false" onAction="#onAcceptButtonAction" prefWidth="80.0" styleClass="invitation-button" text="Accept" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button id="refuse" maxWidth="80.0" mnemonicParsing="false" onAction="#onRefuseButtonAction" prefWidth="80.0" styleClass="invitation-button" text="Refuse" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Pane minHeight="1.0" prefHeight="1.0" styleClass="main-back-ground" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
   </padding>
</fx:root>
